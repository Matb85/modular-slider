{
  "name": "modular-slider",
  "version": "0.5.3",
  "license": "ISC",
  "description": "A zero dependency slider with a modular approach, written in Typescript",
  "scripts": {
    "dev": "snowpack dev",
    "dev:docs": "snowpack dev --config ./devdocs/snowpack.docs.config.js",
    "build": "rimraf ./dist/* -Recurse -Force && rollup -c",
    "build:docs": "rimraf ./docs/*.js ./docs/*.css -Recurse -Force && rollup -c ./devdocs/rollup.config.js --environment NODE_ENV:production",
    "release": "standard-version",
    "imgs": "node ./assets/imageresizer.js",
    "lint": "eslint src/**",
    "style": "rimraf ./dist/* -Recurse -Force && rollup -c style/rollup.config.js"
  },
  "main": "dist/modular-slider.js",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "slider",
    "swiper",
    "vanilla",
    "js",
    "ts",
    "typescript"
  ],
  "author": "matb85",
  "homepage": "https://github.com/Matb85/modular-slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matb85/modular-slider"
  },
  "bugs": {
    "url": "https://github.com/Matb85/modular-slider/issues"
  },
  "devDependencies": {
    "@mdi/js": "^5.9.55",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@snowpack/plugin-postcss": "^1.2.1",
    "@snowpack/plugin-sass": "^1.3.1",
    "@snowpack/plugin-svelte": "^3.5.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@tsconfig/svelte": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "^10.2.5",
    "cssnano": "^4.1.10",
    "eslint": "^7.22.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.42.3",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sharp": "^0.27.2",
    "snowpack": "^3.1.2",
    "standard-version": "^9.1.1",
    "svelte": "^3.35.0",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.3"
  }
}
