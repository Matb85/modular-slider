{
  "name": "modular-slider",
  "version": "0.10.0",
  "license": "ISC",
  "description": "A zero dependency slider with a modular approach, written in Typescript",
  "scripts": {
    "dev": "TARGET=DOCS vite dev --port 3000",
    "build": "vite build && pnpm build:types",
    "build:types": "tsc --project ./tsconfig.build.json",
    "build:docs": "TARGET=DOCS vite build",
    "release": "standard-version",
    "imgs": "node ./assets/imageresizer.js",
    "lint": "eslint src/** && pnpm build:types",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "main": "dist/modular-slider.es.mjs",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "slider",
    "swiper",
    "vanilla",
    "js",
    "ts",
    "typescript"
  ],
  "author": "matb85",
  "homepage": "https://matb85.github.io/modular-slider/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matb85/modular-slider"
  },
  "bugs": {
    "url": "https://github.com/Matb85/modular-slider/issues"
  },
  "devDependencies": {
    "@mdi/js": "^7.0.96",
    "@sveltejs/vite-plugin-svelte": "^1.0.4",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "svelte": "^3.50.0",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^3.0.9"
  },
  "optionalDependencies": {
    "sharp": "^0.30.7",
    "standard-version": "^9.5.0"
  }
}
