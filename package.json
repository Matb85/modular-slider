{
  "name": "modular-slider",
  "version": "0.7.1",
  "license": "ISC",
  "description": "A zero dependency slider with a modular approach, written in Typescript",
  "scripts": {
    "dev": "snowpack dev",
    "dev:docs": "vite dev",
    "build": "rimraf ./dist/* -Recurse -Force && rollup -c",
    "build:docs": "vite build",
    "release": "standard-version",
    "imgs": "node ./assets/imageresizer.js",
    "lint": "eslint src/** && tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "main": "dist/modular-slider.mjs",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "slider",
    "swiper",
    "vanilla",
    "js",
    "ts",
    "typescript"
  ],
  "author": "matb85",
  "homepage": "https://github.com/Matb85/modular-slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matb85/modular-slider"
  },
  "bugs": {
    "url": "https://github.com/Matb85/modular-slider/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@mdi/js": "^6.6.96",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-strip": "^2.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-svelte": "^3.7.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.42",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "autoprefixer": "^10.4.5",
    "core-js": "^3.22.3",
    "cssnano": "^5.1.7",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "snowpack": "^3.8.8",
    "svelte": "^3.47.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "vite": "^2.9.6"
  },
  "optionalDependencies": {
    "sharp": "^0.29.3",
    "standard-version": "^9.3.2"
  }
}
