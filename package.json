{
  "name": "modular-slider",
  "version": "0.7.1",
  "license": "ISC",
  "description": "A zero dependency slider with a modular approach, written in Typescript",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:docs": "TARGET=DOCS vite build",
    "release": "standard-version",
    "imgs": "node ./assets/imageresizer.js",
    "lint": "eslint src/** && tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "main": "dist/modular-slider.es.mjs",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "slider",
    "swiper",
    "vanilla",
    "js",
    "ts",
    "typescript"
  ],
  "author": "matb85",
  "homepage": "https://github.com/Matb85/modular-slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matb85/modular-slider"
  },
  "bugs": {
    "url": "https://github.com/Matb85/modular-slider/issues"
  },
  "devDependencies": {
    "@mdi/js": "^6.6.96",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.42",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "autoprefixer": "^10.4.5",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "svelte": "^3.47.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "vite": "^2.9.6"
  },
  "optionalDependencies": {
    "sharp": "^0.29.3",
    "standard-version": "^9.3.2"
  }
}
